<div class="container">

<p id="notice"><%= notice %></p>

<h1 class="text-center">Thinh's Blog</h1>
<h3 class="text-center"> My first application with Rails 5 for coderschool </h3>

<div class="row">
  <div class="col-sm-4">
    <%= link_to 'New Article +', new_article_path, class:"bg-primary" ,class:"btn btn-primary" %>
  </div>
  <div align="right" class="col-sm-4">
  </div>
  <div align="right" class="col-sm-4">
    <%= render "search_filters", search: @articles %>
  </div>
</div>

<center>
<div class="text-center row">
  <div class="col-sm-8 col-centered">
    <% @articles.each do |article| %>
      <div class="card" style="width: 20rem;">
        <div class="card-block">
          <h4 class="card-title"> <%= article.title %> </h4>
          <p class="card-text"> <%= @markdown.render(article.body).html_safe %> </p>
        </div>
        <div class="card-footer">
          <%= link_to 'Edit', edit_article_path(article), class:'btn btn-warning' %>
          <%= link_to 'Remove', article, method: :delete,data: {confirm: "Are you sure?"}, class:'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
</center>
<br>

</div>
